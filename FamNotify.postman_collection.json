                  "name": "List Reminders for Event",
                  "request": {
                    "method": "GET",
                    "header": [],
                    "url": {
                      "raw": "{{base_url}}/api/admin/event-reminders?eventId={{eventId}}",
                      "host": ["{{base_url}}"],
                      "path": ["api", "admin", "event-reminders"],
                      "query": [
                        {
                          "key": "eventId",
                          "value": "{{eventId}}"
                        }
                      ]
                    }
                  },
                  "response": []
