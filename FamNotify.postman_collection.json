    },
    {
      "name": "Admin (Group)",
      "item": [
        {
          "name": "Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/stats?familyGroupId={{familyGroupId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "stats"],
              "query": [
                {
                  "key": "familyGroupId",
                  "value": "{{familyGroupId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Announcements",
          "item": [
