                      "mode": "raw",
                      "raw": "{\n    \"eventId\": \"{{eventId}}\",\n    \"message\": \"תזכורת: האירוע מתחיל בעוד שעה\",\n    \"scheduledAt\": \"2024-12-30T17:00:00Z\"\n}",
                      "options": {
